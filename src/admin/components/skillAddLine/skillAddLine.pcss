.skillAddLine-component {
  display: flex;
  justify-content: space-between;
  position: relative;
  color: #414C63;

  &.blocked {
    filter: grayscale(70%);
    pointer-events: none;
      
    &:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }
  }
}

.skillAddLine-title {
  flex: 1;
}

.skillAddLine-percent, .skillAddLine-title {
  margin-right: 10px;
}