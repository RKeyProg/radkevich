@import url("../../../styles/mixins.pcss");

.about-page-component {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.skills {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;

  @include tablets {
    width: 100vw;
    margin-left: -2.5%;
  }
}

.item {
  width: calc(100% / 2 - 30px);
  margin-right: 30px;
  margin-bottom: 30px;

  @include tablets {
    width: 100%;
    margin-right: 0;
  }
}