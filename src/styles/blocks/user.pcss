.user {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 335px;
}

.user__avatar {
    margin-bottom: 78px;
}

.user__avatar-style {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
}

.user__data {
    width: 100%;
}

.user__data-row {
    line-height: 42px;
}

.user__data-title {
    color: $white-30;
}

.user__data-content {
    color: white;
}