.thumbs {
    justify-content: flex-end;
}

.thumbs__item {
    width: 178px;
    position: relative;
    outline-offset: -3px;
    outline: 3px solid transparent;
    transition: all .3s;

    &:hover, &.active {
        outline-color: #DC9322;
    }

    @include desktop {
        width: 24%;
    }
}

.thumbs__link {
    width: 100%;
    height: 100%;
    display: block;
}

.outsided {
    position: absolute;
    left: 100%;
}