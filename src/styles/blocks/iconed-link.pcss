.iconed-link {
    display: flex;
    align-items: center;
    font-weight: bold;
    font-size: 18px;
    line-height: 25px;
    color: $links-color;

    &::before {
        content: '';
        display: block;
        background: svg-load('link.svg', fill=$links-color, width=100%, height=100%);
        width: 15px;
        height: 15px;
        margin-right: 15px;
    }
}