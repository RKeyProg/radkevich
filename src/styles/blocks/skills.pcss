.skills {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.skills__item {
    margin-bottom: 40px;

    &:last-child {
        margin-bottom: 0;
    }
}

.skills-row__title {
    font-weight: bold;
    font-size: 24px;
    line-height: 33px;
    color: $text-color_light;
    margin-bottom: 25px;
}

.skills-row__item {
    margin-right: 35px;

    &:last-child {
        margin-right: 0;
    }
}