.skills {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.skills__item {
    margin-bottom: 55px;

    &:last-child {
        margin-bottom: 0;
    }
}

.skills-row__title {
    font-weight: bold;
    font-size: 24px;
    line-height: 33px;
    color: $text-color_light;
    margin-bottom: 40px;
}