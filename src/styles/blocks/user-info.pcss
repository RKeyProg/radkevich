.user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 347px;

    @include tablets {
        width: auto;
    }
}

.user-info__avatar {
    width: 200PX;
    height: 200PX;
    margin-bottom: 65px;

    @include tablets {
        margin-bottom: 21px;
    }
}

.user-info__data {
    width: 100%;
}

.user-info__data-row {
    line-height: 39px;
}

.user-info__data-title {
    color: rgba(white, .3)
}

.user-info__data-content {
    width: 50%;
    color: $text-color_light;
}